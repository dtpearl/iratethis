<!--

Create a new post

 -->
<div class="row">
  <div class="offset-md-4 col-md-4 text-center">
    <h1>Create new post</h1>
  </div>
</div>

<div class="row">
  <div class="offset-md-4 col-md-4 border border-primary rounded">
    <%= form_for(@post, :html => {:multipart => true}) do |f| %>
      <div class="form-label-group my-5">
        <%= f.label :post_image %>
        <%= f.cl_image_upload :post_image, :class => "form-control" %>
      </div>
      <div class="form-label-group my-3">
        <%= f.label :post_text %>
        <%= f.text_area :post_text, :class => "form-control" %>
      </div>
      <div class="form-label-group my-3">
        <%= f.submit "Post", :class => "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
